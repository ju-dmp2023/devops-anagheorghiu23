worker_processes 1;

events { worker_connections 1024; }

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen ${NGINX_PORT};

        location / {
            root /usr/share/nginx/html;
            try_files $uri /index.html;
        }

        location /calculator/ {
            proxy_pass ${REMOTE_SERVER_ADDRESS};
        }
    }
}

